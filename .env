# .env.example
# Copiar este archivo como .env y configurar los valores apropiados

# Django Configuration
# Usar la configuraci√≥n de desarrollo local para evitar depender de Postgres
DJANGO_SETTINGS_MODULE=oncosegunda.settings
DEBUG=True
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DB_NAME=oncosegunda_prod
DB_USER=oncosegunda_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# Email Configuration
# Use SMTP backend to send real emails. For Gmail use an App Password (2FA required).
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=oncologiconacionalcuba@gmail.com
EMAIL_HOST_PASSWORD=wxtwhkarelgpkykj
DEFAULT_FROM_EMAIL=oncologiconacionalcuba@gmail.com



# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Application Configuration
MAX_UPLOAD_SIZE_MB=50
SESSION_COOKIE_AGE=28800  # 8 hours in seconds

# Logging Configuration
LOG_LEVEL=INFO

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Health Check Configuration
HEALTH_CHECK_ENABLED=True