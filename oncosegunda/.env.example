# .env.example
# Copiar este archivo como .env y configurar los valores apropiados

# Django
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=oncosegunda.settings_prod
DEBUG=False

# Base de datos PostgreSQL
DB_NAME=oncosegunda_prod
DB_USER=oncosegunda_user
DB_PASSWORD=your-db-password-here
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://127.0.0.1:6379/1

# Hosts permitidos
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Email configuraci贸n
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@oncosegunda.com

# SSL (para producci贸n)
USE_SSL=False

# AWS S3 (opcional para archivos media)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Configuraci贸n de logging
LOG_LEVEL=INFO

# Configuraci贸n de rate limiting
RATELIMIT_ENABLE=True